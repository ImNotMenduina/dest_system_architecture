<?xml version="1.0" encoding="UTF-8"?>
<web-app
	version="4.0"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:javaee="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xml="http://www.w3.org/XML/1998/namespace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>CriarSupervisorServelet</servlet-name>
		<servlet-class>controladores.CriarSupervisorServelet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CriarSupervisorServelet</servlet-name>
		<url-pattern>/criar</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CriarPedidoController</servlet-name>
		<servlet-class>controladores.CriarPedidoController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CriarPedidoController</servlet-name>
		<url-pattern>/criar_pedido</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>IdentificarUsuarioController</servlet-name>
		<servlet-class>controladores.IdentificarUsuarioController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>IdentificarUsuarioController</servlet-name>
		<url-pattern>/login_user</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>controladores.DatabaseSeederListener</listener-class>
	</listener>
</web-app>
